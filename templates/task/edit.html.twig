{% extends 'base.html.twig' %}

{% block title %}Modifier la tâche{% endblock %}

{% block body %}
    <div class="container py-4">
        <h1>Modifier la tâche</h1>

        {{ include('task/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

        <div class="mt-3 d-flex gap-2">
            <a href="{{ path('app_task_index') }}" class="btn btn-secondary">Retour à la liste</a>
            
            <form method="post" action="{{ path('app_task_delete', {'id': task.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette tâche?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                <button class="btn btn-danger">Supprimer</button>
            </form>
        </div>
    </div>
{% endblock %}